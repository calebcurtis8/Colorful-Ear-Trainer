<header class="z-20 sticky top-0 h-16 w-full bg-theme-bg lg:bg-transparent border-b-2 border-theme-text">
    <div class="max-w-screen-2xl grid grid-cols-2 md:grid-cols-3 px-4 h-full mx-auto">
        <div class="flex items-center">
            <!-- <%- include('./_level-selector.ejs') %> -->
        </div>
        <div class="text-center items-center justify-center hidden md:flex">
            <h1 class="text-2xl font-bold tracking-wider bg-gradient-to-r from-yellow-500 via-blue-300 to-purple-400">Colorful Ear Trainer</h1>
        </div>
        <div class="flex items-center justify-end">
            <div class="mr-4">
                <modal-toggle aria-controls="Instructions">
                    <button class="w-12 h-12 rounded-full md:rounded-lg md:w-auto md:px-4 md:font-bold bg-gradient-to-r from-yellow-600 to-yellow-400 text-black">
                        <span class="md:hidden text-xl">?</span>
                        <span class="hidden md:block">Instructions</span>
                    </button>
                </modal-toggle>
            </div>
            <div class="flex flex-col">
                <div class="dark-button">
                    <local-storage data-key="EarTrainerTheme">
                        <input type="checkbox" id="DarkMode" name="darkmode">
                        <label for="DarkMode" aria-label="Dark Mode Toggler"></label>
                    </local-storage>
                </div>
            </div>
        </div>
    </div>
</header>